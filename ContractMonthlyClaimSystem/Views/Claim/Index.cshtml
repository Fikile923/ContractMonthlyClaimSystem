@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<ContractMonthlyClaimSystem.Models.Claim>

<h2>Claims Overview</h2>

<table class="table">
    <thead>
        <tr>
            <th>Lecturer Name</th>
            <th>Claim Period</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.LecturerName</td>
                <td>@claim.ClaimPeriodFrom.ToShortDateString() - @claim.ClaimPeriodTo.ToShortDateString()</td>
                <td>@claim.Status</td>
                <td>
                 <!--Edit or Delete-->                    
                    <a href="@Url.Action("Edit", "Claim", new { claimId = claim.ClaimId })">Edit</a>
                    <a href="@Url.Action("Delete", "Claim", new { claimId = claim.ClaimId })"
                    onclick="return confirm('Are you sure you want to delete this claim?');">Delete</a>
                      
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Submit", "Claim")" class="btn btn-primary">Submit New Claim</a>
