@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<ContractMonthlyClaimSystem.Models.Claim>

<h2>Approve or Reject Claims</h2>

<table class="table">
    <thead>
        <tr>
            <th>Lecturer Name</th>
            <th>Claim Period</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.LecturerName</td>
                <td>@claim.ClaimPeriodFrom.ToShortDateString() - @claim.ClaimPeriodTo.ToShortDateString()</td>
                <td>@claim.Status</td>
                <td>
                    @if (claim.Status == "Pending")
                    {
                        <form asp-action="Approve" method="post">
                            <input type="hidden" name="claimId" value="@claim.ClaimId" />
                            <button name="approve" value="true" class="btn btn-success">Approve</button>
                            <button name="approve" value="false" class="btn btn-danger">Reject</button>
                        </form>
                    }
                    else
                    {
                        <span>@claim.Status</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

